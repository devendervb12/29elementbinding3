<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
  xmlns:form="sap.ui.layout.form"
		controllerName="zelementbinding.Company" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Title">
		<content>
	         <form:SimpleForm binding="{/company}">
	            <form:title>
	                <core:Title text="Company Details"/>
	            </form:title>
	            
	            <form:content>
	                <Label text="NAME"/>
	                <Text text="{name}"/>
	                <Label text="CITY"/>
	                <Text  text="{address/city}"/>
	            </form:content>   
	       </form:SimpleForm>
	       
	       
	       
	       
	       
	       
	       
	       
	       
	       
	       
	       
	       
	       
	        <form:SimpleForm binding="{/company/empInfo/2}">
	            <form:title>
	                <core:Title text="Employee Details"/>
	            </form:title>
	            
	            <form:content>
	                <Label text="NAME"/>
	                <Text text="{name}"/>
	                <Label text="ROLE"/>
	                <Text  text="{role}"/>
	                <Label text="DEPT"/>
	                <Text  text="{dept}"/>
	            </form:content>   
	       </form:SimpleForm>
	       
	       
	       
	       
	       
	       
	       
	       
	       
	       
	       
		</content>
	</Page>
</core:View>